//Exercício 5:
//Ler um número inteiro e exibir o seu sucessor.
Program exerc5;
var
	a:integer;	
Begin
	write('Digite um número inteiro qualquer: ');
	readln(a);
	writeln();
	
	a:=a+1;
	
	write('Seu número agora é: ',a);
	writeln();
	
	readkey();
End.